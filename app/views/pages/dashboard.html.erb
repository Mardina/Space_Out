<%# BOOKINGS %>
<div class="container px-4 py-5">
  <h2 class="pb-2 border-bottom">Your Bookings</h2>
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class="card mx-3 my-3" style="width: 18rem;">
      <img src="<%= booking.room.image_url %>" class="card-img-top" alt="Room Picture">
      <div class="card-body text-center ">
        <h5 class="card-title"><%= booking.room.title %></h5>
        <p>Check in:</p>
        <p class="mb-2 text-muted"><%= booking.booking_start.strftime("%m/%d/%Y at %I:%M%p") %></p>
        <p>Check out:</p>
        <p class="mb-2 text-muted"><%= booking.booking_end.strftime("%m/%d/%Y at %I:%M%p") %></p>
        <%= link_to "Cancel", room_path(booking.room), method: :delete, class: "btn btn-danger" %>
        <%= link_to "See Room", room_path(booking.room), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>


<%# Meetings Rooms %>
<div class="container px-4 py-5">
  <h2 class="pb-2 border-bottom">Your Meeting Rooms</h2>
  <div class="row">
  <% @rooms.each do |room| %>
    <div class="card text-center mx-3 my-3" style="width: 18rem;">
      <img src="<%= room.image_url %>" class="card-img-top" alt="Room Picture">
      <div class="card-body">
        <h5 class="card-title"><%= room.title %></h5>
        <p class="card-text"><%= room.description %></p>
        <%= link_to "Delete", room_path(room), method: :delete, class: "btn btn-danger" %>
        <%# Update button should have method: :patch? %>
        <%= link_to "Update", edit_room_path(room), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  </div>
</div>

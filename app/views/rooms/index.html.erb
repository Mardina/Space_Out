<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Your Bookings", rooms_path, class: "sidebar-link active" %></li>
            <%# <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
            <%# <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>All our beautiful meeting spaces</h1>
            </div>
            <div class="panel-body">
                <% @rooms.each do |room| %>
                    <div class="row">
                        <div class="col-md-2">
                            <%# <%= image_tag room.cover_photo(:thumb) %>
                        </div>
                        <div class="col-md-7">
                            <h4><%= room.title %></h4>
                        </div>
                        <div class="col-md-3 right">
                            <%= link_to "Update", edit_room_path(room), class: "btn btn-primary" %>
                        </div>
                    </div>
                    <hr/>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
<h1 class="text-center"><%= @room.title %></h1>
  <div class="container py-5">
    <%# images tag here %>
    <h3>Capacity</h3>
    <p><%= @room.capacity %></p>
    <h3>Description</h3>
    <p><%= @room.description %></p>
    <p>This meeting room is owned by <%= @room.user.name %></p>
    <h3>Address</h3>
    <p><%= @room.address %></p>
    <h3>Availability</h3>
    <p>Booking status:
    <% if @room.booked? %>
    <%= "Currently unavailable for bookings" %>
    <% else %>
    <%= "Available for booking" %>
    <% end %>
    </p>

    <p>From: <%= @room.availability_start.strftime("%m/%d/%Y at %I:%M%p") %></p>
    <p>To: <%= @room.availability_end.strftime("%m/%d/%Y at %I:%M%p") %></p>
  </div>
  <div class="text-center"><%= link_to 'Return to Meeting Spaces', rooms_path, class: "btn btn-primary" %></div>
</div>

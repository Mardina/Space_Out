        <h1>Welcome back <%= current_user.name.capitalize %>!</h1>
        <% if user_signed_in? %>
          <p>Logged in as: <%= current_user.email %></p>
        <% end %>
        <div class="py-5">
          <%= link_to 'âž• New Meeting Space', new_room_path, class: "btn btn-light" %>
        </div>
      </div>
  </div>
